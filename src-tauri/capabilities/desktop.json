{
  "identifier": "desktop-capability",
  "platforms": [
    "windows"
  ],
  "local": true,
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-close",
    "core:window:allow-hide",
    "core:window:allow-set-focus",
    "core:window:allow-show",
    "dialog:default",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA/magnetar/**"
        }
      ]
    },
    "global-shortcut:default",
    "global-shortcut:allow-is-registered",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    "http:default",
    "http:allow-fetch",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://api.github.com/repos/Bamboooz/magnetar/releases/latest"
        }
      ]
    },
    "shell:default",
    "shell:allow-open"
  ]
}