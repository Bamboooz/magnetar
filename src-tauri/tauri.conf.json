{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "magnetar",
    "version": "0.0.6"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "globalShortcut": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "show": true,
        "setFocus": true,
        "hide": true,
        "close": true
      },
      "fs": {
        "all": false,
        "writeFile": true,
        "readFile": true,
        "createDir": true,
        "exists": true,
        "scope": ["$DATA/magnetar/**"]
      }
    },
    "security": {
      "csp": "img-src 'self' asset: https://asset.localhost https://cdn.akamai.steamstatic.com"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.magnetar.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "windows": [
      {
        "title": "magnetar",
        "label": "main",
        "width": 440,
        "height": 720,
        "resizable": false,
        "decorations": false,
        "visible": false,
        "skipTaskbar": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
