{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "magnetar",
        "version": "0.0.1"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "globalShortcut": {
                "all": true
            },
            "window": {
                "all": false,
                "show": true,
                "setFocus": true,
                "hide": true,
                "close": true
            },
            "fs": {
                "all": false,
                "writeFile": true,
                "removeFile": true,
                "createDir": true,
                "exists": true,
                "scope": ["$RESOURCE/*"]
            },
            "dialog": {
                "all": false,
                "open": true
            },
            "protocol": {
                "all": false,
                "asset": true,
                "assetScope": ["$DATA/magnetar/*"]
            },
            "http": {
                "all": false,
                "request": true,
                "scope": ["https://store.steampowered.com/api/*"]
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.magnetar.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "resources": [
                "resources/bluetooth.ps1"
            ]
        },
        "security": {
            "csp": "img-src 'self' asset: https://asset.localhost https://cdn.akamai.steamstatic.com"
        },
        "windows": [
            {
                "label": "main",
                "fullscreen": false,
                "resizable": false,
                "decorations": false,
                "title": "magnetar",
                "width": 440,
                "height": 720
            }
        ],
        "systemTray": {
            "iconPath": "icons/icon.png",
            "iconAsTemplate": true
        }
    }
}
